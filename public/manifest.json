{
  "name": "Provenance Blockchain Wallet",
  "description": "Provenance Blockchain Wallet Browser Extension",
  "author": "Figure Tech",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "management"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "background.js" ],
      "matches": [
        "*://*.figure.tech/*",
        "http://localhost:3000/*"
      ]
    }
  ],
  "host_permissions": [
    "*://*.figure.tech/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [ "content-script.js" ],
      "matches": [ "file://*/*", "http://*/*", "https://*/*" ],
      "run_at": "document_start"
    }
  ]
}
